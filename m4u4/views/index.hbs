<h1>{{title}}</h1>
{{#if conocido}}
    <p>Hola {{nombre}}
    <p>{{edad}}
    <p>{{color}} <a href="/salir">Salir</a></p>
{{/if}}

{{#unless conocido}}
    <p>No te conozco</p>
    <form action="/ingresar" method="post">
        <input type="text" name="nombre" placeholder="Nombre"><br><br>
        <input type="number" name="edad" placeholder="Edad"><br><br>
        <input type="text" name="color" placeholder="Color favorito"><button>ingresar</button>
    </form>
{{/unless}}